<script>
var t;t="";

function d()
{
t=0;
document.getElementById("a").innerHTML=t;
}


function c(a)
{
t+=a;
document.getElementById("a").innerHTML=t;
document.getElementById("a").style.fontSize="200%";
}

function res()
{
var tt=eval(t);
document.getElementById("a").innerHTML=tt;
t=tt;
document.getElementById("a").style.fontSize="200%";
}


</script>
